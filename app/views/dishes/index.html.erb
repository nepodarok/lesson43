<p id="notice"><%= notice %></p>

<h1>Listing Dishes</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Desc</th>
      <th>Price</th>
      <th>Shop</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @dishes.each do |dish| %>
      <tr>
        <td><%= dish.name %></td>
        <td><%= dish.desc %></td>
        <td><%= dish.price %></td>
        <td><%= dish.shop %></td>
        <td>
        <%= form_for Cart.new, url: carts_path, method: :post do |f| %>

        <%= f.number_field :count_item, :value => "1" %>
        <%= f.hidden_field :dish_id, :value => dish.id %>

        <%= f.submit "Добавить в корзину", class: "btn btn-primary"%>

        <% end %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
